#!/usr/bin/env node

/**
 * Module dependencies.
 */

const app = require('../app');
const debug = require('debug')('appFreeDocs')
const http = require('http');
const environment = process.env.NODE_ENV; // development
const stage = require('../config')[environment];
const errorHandler = require('../errorhandler').handler

process.on('uncaughtException', err => {
  console.error('There was an uncaught error', err)
  //   errorHandler.handleError(error);
  process.exit(1) //mandatory (as per the Node.js docs)
})

process.on("unhandledRejection", (reason) => {
  console.log('there was an unhandledRejection error', reason)
  errorHandler.handleError(reason);
  process.exit(1)
});

/**
 * Get port from environment and store in Express.
 */

app.set('port', normalizePort(stage.port || '3000'));
// console.log(port)
/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(normalizePort(stage.port || '3000'));
server.on('error', onError);
server.on('listening', onListening);


/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
